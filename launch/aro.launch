<?xml version="1.0"?>

<launch>
   
  <include file="$(find hector_gazebo_worlds)/launch/start.launch">
   <arg name="world" value="$(find hector_quadrotor_demo)/hector_aro/worlds/aro_different_heights.world"/> 
  </include>
  
  <!-- Spawn simulated quadrotor uav -->
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" >
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/> 
  </include>
  
  <!-- include ds4 remote control -->
  <include file="$(find hector_quadrotor_demo)/hector_aro/launch/status_to_hector.launch" /> 

  <!-- Navigation Goals in Rviz -->
  <node pkg="aro" 
    type="hector_node.py" 
    name="hector_node" 
    output="screen" >
  </node>
  
  <!-- Start rviz visualization with preset config -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find hector_quadrotor_demo)/rviz_cfg/outdoor_flight.rviz"/>
   
</launch>
